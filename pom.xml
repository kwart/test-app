<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.jboss.test</groupId>
	<artifactId>test-app</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>${project.artifactId}</name>
	<url>https://github.com/kwart/test-app</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>keytool-maven-plugin</artifactId>
				<version>1.5</version>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>keytool-api-1.7</artifactId>
						<version>1.5</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<phase>generate-test-resources</phase>
						<id>genkey-1</id>
						<goals>
							<goal>generateKeyPair</goal>
						</goals>
						<configuration>
							<keystore>${basedir}/target/keystore1</keystore>
							<keypass>keystore1</keypass>
							<storepass>keystore1</storepass>
						</configuration>
					</execution>
					<execution>
						<phase>generate-test-resources</phase>
						<id>genkey-2</id>
						<goals>
							<goal>generateKeyPair</goal>
						</goals>
						<configuration>
							<keystore>${basedir}/target/keystore2</keystore>
							<keypass>keystore2</keypass>
							<storepass>keystore2</storepass>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<dname>cn=commonName, ou=organizationUnit, o=organizationName,
						c=countryCode</dname>
					<alias>test</alias>
					<keyalg>RSA</keyalg>
					<keysize>2048</keysize>
					<validity>365</validity>
					<storetype>JKS</storetype>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
